<li class="resource_type_attribute" id="resource_type_attribute_<%= attribute.id %>">
  <% 
     prefix = "type_attributes"
     prefix = "new_#{ prefix }" if attribute.new_record? 
     prefix = "resource_type[#{ prefix }]"
   -%>
  
  <% fields_for(prefix, attribute) do |f| %>
    <%= f.hidden_field :position, :index => attribute.id %>
    <label><%=_ "Name" %></label>
    <%= f.text_field :name, :index => attribute.id %>
    <%= sortable_handle_tag(attribute) %>
    <%= link_to_remove_li %>

    <label><%=_ "Mandatory?" %></label>
    <%= f.check_box :is_mandatory, :index => attribute.id %>

    <label><%=_ "Password?" %></label>
    <%= f.check_box :is_password, :index => attribute.id %>

    <label><%=_ "Allows multiple?" %></label>
    <%= f.check_box :allows_multiple, :index => attribute.id %>

    <label><%=_ "Validation Regex" %></label>
    <%= f.text_field :validation_regex, :index => attribute.id %>

    <label><%=_ "Default field length " %></label>
    <%= f.text_field :default_field_length, :index => attribute.id %>

  <% end %>
</li>

