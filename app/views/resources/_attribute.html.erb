<% 
   field_id = "attribute_#{ attribute.id }" 
   prefix = "resource[attribute_values][]"
   type = attribute.resource_type_attribute
%>
<label for="<%= field_id %>">
  <%= type.name %>
</label>

<%= hidden_field_tag "#{ prefix }[resource_type_attribute_id]", type.id %>
<%= hidden_field_tag "#{ prefix }[id]", attribute.id %>

<%= value_field(attribute, prefix, field_id) %>

<br clear="both" />

<% if attribute.errors.on("value") %>
  <div class="error">
    <%= attribute.errors.on("value") %>
  </div>
<% end %>

