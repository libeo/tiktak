<% if @folder.parent_id.nil? %>
<p><label for="folder_project_id"><%=_ 'Project' %></label><%= select 'folder', 'project_id', User.find(session[:user].id).projects.find(:all, :order => 'name', :conditions => ["completed_at IS NULL"]).collect {|c| [ c.name, c.id ] } %></p>
<% else %>
<%= hidden_field 'folder', 'project_id' %>
<% end %>
<p><label for="folder_name"><%=_ 'Name' %></label><%= text_field 'folder', 'name'  %></p>
<%= hidden_field 'folder', 'parent_id' %>
<br>

