<fieldset id="new_folder">
<legend><%=_ 'Create New Folder' %></legend>

<%= form_remote_tag :url => {:action => 'create_folder' },
                                   :loading => "Element.show('loading');",
                                   :complete => "Element.hide('loading');"

 %>
  <%= render :partial => "form_folder" %>
  <%= submit_tag _("Create"), :style => 'margin-left:11.6em;' %>
    <div style="padding-top:0.2em;"> <%= _("or") %>
    <%= link_to_function _("Cancel") do |page|
          page.hide 'inline_form'
        end
    %></div>
<% end_form_tag %>

</fieldset>
