<% @internal = current_user.company.internal_customer %>
<div class='header'>
  <div id='logo' class='box'>
    <% if !@internal.nil? && @internal.logo? %>
    <%= tag("img", {:src => "/clients/show_logo/#{@internal.id}", :border => 0 } ) %>
    <% else %>
    <%= image_tag("logo_new.png", :border => 0, :alt => "Clocking IT Beta" ) %>
  <% end %>
  </div>
  <div class='box' id="menu_info"> <%= render :partial => "layouts/sheet_info" %></div>
  <div class='box' id="menu_timeleft"> <%= render :partial => "layouts/time_left" %> </div>
  <div class='right_section'>
    <div class='box' id="menu_login" style="float:right;"> <%= render :partial => "layouts/login_info" %></div>
    <div class='box' id='menu_shortlist' style="float:right;"> <%= render :partial => 'layouts/shortlist_link' %> </div>
  </div>
  <div style="clear:both;"></div>
</div>

