<div class="page_header"><%= _ 'History' %></div> 
<div id='history'>
<% if session[:only_comments].to_i == 0 %>
             <%= link_to_remote _('Show Only Comments'), :url => {:action => 'toggle_history', :id => @task.id },
                                     :loading => "showProgress();",
                                     :complete => "hideProgress();"
             %>
  <% else %>
             <%= link_to_remote _('Show Full History'), :url => {:action => 'toggle_history', :id => @task.id},
                                     :loading => "showProgress();",
                                     :complete => "hideProgress();"
             %>
  <% end %>
<table class='history'>
  <tr>
    <th><%= _('Date') %>
    <th><%= _('Action')%></th>
    <th><%= _('User')%></th>
    <th><%= _('Comment') %></th>
  </tr>
    <%
    @logs ||= []
    @logs.each do |log|
    %>
	<%= render :partial => 'activities/log_row2', :locals => {:log => log} %>
<% end %>
</table>
</div>
