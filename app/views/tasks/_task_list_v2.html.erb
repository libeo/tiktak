<%
  redirect_action = nil unless local_assigns[:redirect_action]
%>
<%= render(:partial => "search_filter", :locals => { :redirect_action => redirect_action, :redirect_params => { :tag => params[:tag] }}) %>

<div id="task_list">
  <div id="print_title"><%= print_title %></div>
  <%= will_paginate @tasks %>
  <table id="list" class="tablesorter">
    <thead>
      <tr>
	<th><%= _("Type") %></th>
	<th><%= _("Summary") %></th>
	<th><%= _("Client") %></th>
	<th><%= _("Project/Milestone") %></th>
	<th><%= _("Due Date") %></th>
	<th><%= _("Hours Left") %></th>
	<th><%= _("Assigned To") %></th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "task_row_v2", :collection => @tasks %>
    </tbody>
  </table>
</div>
<%= sortable_table("#list", session[:filter_sort]) -%>
