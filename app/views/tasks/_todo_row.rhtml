<li id="<%=@todo.dom_id%>" class="<%=@todo.css_classes%>"><%= check_box("todo", "done", { "title" => _("Close <b>%s</b>", @todo.name),  :class => "button tooltip", :id => "button_#{@todo.id}",
                                           :onclick => remote_function(:url => { :controller => 'tasks', :action => 'todo_check_ajax', :id => @todo.id, :depth => depth },
                                                                       :loading => "Element.show('loading');",
                                                                       :complete => "Element.hide('loading');" ) } )
  -%>
  <%= @todo.name %> <%= "[#{tz.utc_to_local(@todo.completed_at).strftime("#{current_user.time_format} #{current_user.date_format}")}]" if @todo.done? %></li>

