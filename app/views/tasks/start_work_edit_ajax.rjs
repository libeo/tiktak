if params[:id].to_i != session[:sheet].task_id 
	page.visual_effect(:shake, "task_#{params[:id]}")
else 
  	page.replace_html "task_page_header", :partial => "task_edit_header", :locals => {:task => session[:sheet].task }
	page.replace_html "menu_info", :partial => "layouts/sheet_info"
	page.call "UpdateDnD"
end

