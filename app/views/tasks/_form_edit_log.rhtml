<%= error_messages_for 'log' %>

<!--[form:log]-->
<p><label for="log_started_at"><%=_ 'Start' %></label>
<%= calendar_field 'log', 'started_at', { :class => 'date', :field_title => 'Start', :button_title => _('Show Calendar'), :size => '15' },
        { :ifFormat => "#{current_user.date_format} #{current_user.time_format}", :firstDay => 1, :range => [2006, 2010], :step => 1, :showOthers => true, :showsTime => true, :timeformat => "24" } %></p>
<% if @log.log_type != EventLog::TASK_COMMENT %>
<p><label for="log_duration"><%=_ 'Duration Worked' %></label><%= text_field 'log', 'duration', {:value => worked_nice(@log.duration), :size => 10, :class => 'tooltip', :title => _('1w 2d 3h 4m') }  %></p>
<% end %>
<p><label for="log_body"><%=_ 'Notes' %></label><%= text_area 'log', 'body', :rows => 10  %></p>

<br>


