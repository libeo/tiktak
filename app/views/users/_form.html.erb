<%= error_messages_for 'user' %>

<!--[form:user]-->
<%= render :partial => "user_information" %>

<fieldset class="basic">
<legend><%=_ 'Options' %></legend>
<label for="user_locale"><%=_ 'Language' %></label><%= select 'user', 'locale', Localization.locales %><br/>
<label for="user_time_zone"><%=_ 'Location' %></label><%= time_zone_select 'user', 'time_zone', TZInfo::Timezone.all.sort, :model => TZInfo::Timezone %><br/>
<% if current_user.admin > 0 %>
<label for="user_admin"><%=_ 'Administrator' %></label><%= check_box 'user', 'admin' %><br/>
<label for="user_create_projects"><%=_ 'Can Create Projects' %></label><%= check_box 'user', 'create_projects' %><br/>
<br/>
<% end %>

<label for="user_option_tracktime"><%=_ 'Track Time' %></label><%= check_box 'user', 'option_tracktime' %><br/>
<label for="user_option_tooltips"><%=_ 'Show Tooltips' %></label><%= check_box 'user', 'option_tooltips' %><br/>
<label for="user_send_notifications"><%=_ 'Send Notifications' %></label><%= check_box 'user', 'send_notifications' %><br/>
<label for="user_receive_notifications"><%=_ 'Receive Notifications' %></label><%= check_box 'user', 'receive_notifications' %><br/>
<label for="user_receive_own_notifications"><%=_ 'Receive Own Notifications' %></label><%= check_box 'user', 'receive_own_notifications' %><br/>
<label for="user_use_resources"><%=_ 'Use Resources' %></label><%= check_box 'user', 'use_resources' %><br/>

<label for="user_option_externalclients"><%=_ 'Use External Clients' %></label>
<%= check_box 'user', 'option_externalclients' %>
<br/>
<label for="user_read_clients"><%=_ "Read client details" %></label>
<%= check_box(:user, :read_clients) %>
<br/>
<label for="user_create_clients"><%=_ "Create clients" %></label>
<%= check_box(:user, :create_clients) %>
<br/>
<label for="user_edit_clients"><%=_ "Edit client details" %></label>
<%= check_box(:user, :edit_clients) %>
<br/>

<label for="user_can_approve_work_logs"><%=_ "Approve work logs" %></label>
<%= check_box(:user, :can_approve_work_logs) %>
<br/>

</fieldset>
<br>
