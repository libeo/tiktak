<tr>
    <td style="height:20px;vertical-align:top;width:260px;padding-right:0.5em;" nowrap><div style="width:250px;overflow:hidden;height:16px;" nowrap><%= link_to_task(@t) %></div></td>
    <td width="1%" style="text-align:right;padding-right:0.5em;" nowrap><%= format_duration(@t.worked_seconds)%></td>
    <td width="1%" style="text-align:right;" nowrap><% if current_user.can?(@t.project,'prioritize')%><input tabindex="<%=tab%>" class="<%= "scheduled" if @t.scheduled? && @t.scheduled_duration != @t.duration%>" type="text" size="5" style="font-size:11px;" id="duration-<%=@t.dom_id%>" name="duration" value="<%= format_duration(@t.scheduled_duration)%>" /><%else%><%= format_duration(@t.duration)%><%end%></td>
    <td style="padding-left:0.5em;text-align:right;" nowrap>
    <%= text_field 'task', 'due', {
    	:id => 'due-' + @t.dom_id,
    	:class => ("scheduled" if @t.scheduled? && @t.scheduled_at != @t.due_at),
    	:size => 12,
    	:disabled => current_user.can?(@t.project,'prioritize') ? false : true,
    	:value => (tz.utc_to_local(@t.scheduled_due_at).strftime(current_user.date_format) if @t.scheduled_due_at)
    } %>
    </td>
</tr>
