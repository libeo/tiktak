<div style="background-color:#fcc;padding:0.5em 1em 0.5em 1em;margin:0.2em 1em 0.5em 1em;border-top:1px solid black;border-bottom:1px solid black;">Changes done here will not be logged in the Activity log or sent out as notifications.</div>
<table id="content" width="100%" cellpadding="0" cellspacing="0" style="padding-right:1em;">
<tr>
    <td valign="top" style="padding-right:0.3em;">
      <table width="100%" cellpadding="0" cellspacing="0">
	<tr>
	  <th style="height:20px;" colspan="4"></th>
	</tr>
	<tr>
	  <th style="height:20px;">Task</th>
	  <th>Done</th>
	  <th>Estimate</th>
	  <th width="116px">Due</th>
	</tr>
	<% i = 1
	date_tooltip = _("Enter task due date, or click calendar button.")
        last_milestone = nil
	@tasks.each do |@t| 
          if @t.milestone_id.to_i > 0 && @t.milestone_id != last_milestone
	    last_milestone = @t.milestone_id
	    %>
        <%= render :partial => "gantt_milestone_row", :locals => {:tab => i} %>            
	  <% i+=2
             end %>
	<%= render :partial => "gantt_task_row", :locals => {:tab => i} %>

	<% i += 2
	end %>
</table>
    </td>
    <td width="60%" valign="top" style="padding-left:0.3em;">

<div style="width:100%;overflow-x:auto;overflow-y:hidden;border-left:1px solid #999;border-right:1px solid #999;position:relative;">
<div style="height:19px;position:relative;">
       <% s = @range[0]
	  left = 0
          while s < @range[1] do
#	  if s.next_month.beginning_of_month < @range[1] 
                w = ((s.next_month.beginning_of_month.to_i - s.midnight.to_i)/1.day) * 16 - 1
		style = "width:#{w}px;border-right:1px solid #999;"
#           else 
#	        w = 0
#                style = ""
#           end 

	   %>
       <div style="<%= style %>text-align:center;position:absolute;left:<%=left%>px;top:0;height:20000px;">
	  <%= s.strftime("%B") %>
       </div>
       <%   s = s.next_month.beginning_of_month
           left += w + 1
          end %>
</div>
<div style="clear:both;height:20px;position:relative;">
       <% s = @range[0]
	  w = 0
          while s < @range[1] do 
	  %>
       <div style="position:absolute;left:<%=w%>px;top:0;width:15px;border-right:1px solid #eee;text-align:center;height:20000px;<%="background-color:#eee;" if s.wday == 0 || s.wday == 6%>">
	  <%= s.day %>
       </div>
       <%   s += 1.day
	  w+= 16;
          end %>
</div>

<% last_milestone = nil
   @tasks.each do |t|
   if t.milestone_id.to_i > 0 && t.milestone_id != last_milestone
     last_milestone = t.milestone_id
%>
<div style="vertical-align:top;position:relative;height:20px;clear:both;">
      <div id="offset-<%=t.milestone.dom_id%>" style="position:relative;left:<%=gantt_offset( @milestone_start[t.milestone_id] )%>;padding-top:3px;">
	<div id="width-<%=t.milestone.dom_id%>" style="float:left;width:<%= gantt_width(@milestone_start[t.milestone_id], @milestone_end[t.milestone_id])%>;margin-right:0.3em;vertical-align:top;background:url(/images/milestone_bar.gif) repeat-x;">
	      <div style="float:left;"><img src="/images/milestone_end.gif" /></div>
	      <div style="float:right;"><img src="/images/milestone_end.gif" /></div>
	</div>
	<div style="float:left;">
	  <strong><%= t.milestone.name %></strong>
	</div>
      </div>
</div>
<% end %>
<div style="vertical-align:top;position:relative;height:20px;clear:both;">
      <div id="offset-<%=t.dom_id%>" style="position:relative;left:<%=gantt_offset(@start[t.id])%>;padding-top:3px;">
	<div id="width-<%=t.dom_id%>" style="float:left;background-color:<%= gantt_color(t) %>;width:<%=gantt_width(@start[t.id], @end[t.id])%>;margin-right:0.3em;">
	  &nbsp;
	</div>
	<div style="float:left;">
	  <small><%= ((t.users.size > 0) ? t.users.collect(&:name).join(',') : "[No one]") %></small>
	</div>
      </div>
</div>
<% end %>
<div>&nbsp;</div>
</div>
    </td>
  </tr>
</table>
<script type="text/javascript" language="javascript" charset="utf-8">
