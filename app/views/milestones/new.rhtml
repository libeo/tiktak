<fieldset>
<legend><%=_ 'New Milestone' %></legend>

<% unless @popup.nil? %>
<% form_remote_tag :name => 'milestoneForm', :url => { :action => 'create' }, :success => "self.parent.Shadowbox.close();" do %>
  <%= render :partial => 'form' %>
  <%= submit_tag _("Create"), :class => 'nolabel'%>
<% end %>
<% else %>
  <% form_tag :action => 'create' do %>
   <%= render :partial => 'form' %>
  <%= submit_tag _("Create"), :class => 'nolabel' %>
<% end %>
<% end %>
</fieldset>
