<div id="channel_<%= channel.id %>" class="channel<%=" channel-public" if channel.public.to_i > 0 %>">
<span class="channel-title"><%= link_to channel.name, :action => 'room', :id => channel.id %></span><% if channel.last_active %><span class="channel-last-active" id="active_<%= channel.id %>"> - Last active <%= time_ago_in_words(channel.last_active) %> ago</span><% end %>

<div class="channel-description"><%= channel.description %></div>
<div class="channel-users">Erlend Simonsen, Ellen Simonsen, Christian Lassem, Bjarne Tester, Bob Hansen, Ingvild Simonsen, Marit, Sandra San</div>
</div>
