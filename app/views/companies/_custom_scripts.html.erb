<fieldset class="basic">
  <legend>
    <%=_ "Custom Scripts" %>
  </legend>

  <p>
    <%=_ "Custom ruby scripts can be placed in the lib/scripts directory. They will then be listed below and can be executed against the current Tik-Tak database." %>
  </p>
  <% scripts = all_custom_scripts -%>
  <% if scripts and scripts.any? -%>
    <ul>
      <% scripts.each do |script| -%>
      <li>
	<%= link_to script, :controller => "scripts", :script => script %>
      </li>
      <% end -%>
    </ul>
  <% else -%>
  <p>
    <%=_ ("No custom scripts found. If there should be some, check the file ends in \".rb\" and is in the folder: " +
	 "#{ RAILS_ROOT }/lib/scripts") %>
  </p>
  <% end -%>
</fieldset>
