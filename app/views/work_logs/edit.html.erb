<% content_for(:javascript_includes) do %>
  <%= javascript_include_merged :worklogs %>
<% end %>
<% content_for(:stylesheet_includes) do %>
  <%= stylesheet_link_merged :worklogs %>
<% end %>
<%= calendar_date_select_includes %>
<% CalendarDateSelect.format = :fucked %>
<%= stylesheet_link_tag "calendar_date_select/blue" %>
<%= javascript_include_tag "calendar_date_select/calendar_date_select" %>
<fieldset class="basic">
<legend><%=_ 'Edit Log Entry' %> - <%= @work_log.task.name %></legend>

<%= render(:partial => "form_edit", :locals => { :work_log => @work_log, :method => :put }) %>

<br />
<% if @work_log.user == current_user or current_user.admin? or current_user.can?(@work_log.project, 'all') %>
  <%= link_to _("Delete Log Entry"), {:controller => 'work_logs', :action => 'destroy', :id => @work_log.id }, :confirm => _("Really delete this log entry?")  %>
<% end %>
</fieldset>

<%= link_to 'Show', @work_log %> |
<%= link_to 'Back', work_logs_path %>
