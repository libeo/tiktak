<li class="property_value" id="property_value_<%= pv.id %>">
  <% 
     prefix = "property_values"
     prefix = "new_#{ prefix }" if pv.new_record? 
   -%>
  
  <% fields_for(prefix, pv) do |f| %>
    <label><%=_ "Value" %></label>
    <%= f.text_field :value, :index => pv.id %>
    <%= sortable_handle_tag(pv) %>
    <%= link_to_remove_li %>

    <label><%=_ "Default" %></label>
    <%= nested_boolean_choice_field(f, :default, pv, :class => 'default', :onChange => "clearOtherDefaults(this)") %>

    <label><%=_ "Color" %></label>
    <%= f.text_field :color, :index => pv.id %>

    <label><%=_ "Icon URL" %></label>
    <%= f.text_field :icon_url, :index => pv.id %>
    <br />
  <% end %>
</li>

