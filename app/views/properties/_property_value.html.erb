<div class="property_value">
  <% 
     prefix = "property_values"
     prefix = "new_#{ prefix }" if pv.new_record? 
   -%>
  
  <% fields_for(prefix, pv) do |f| %>
    <label><%=_ "Value" %></label>
    <%= f.text_field :value, :index => pv.id %>
    <%= link_to_remove_value %>
    <br />
  <% end %>
</div>

