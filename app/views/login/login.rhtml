<% unless @company.nil? %>
<html>
<head>
<title><%= @company.name %> - ClockingIT</title>
<%= stylesheet_link_merged :tt %>
<style type="text/css">
body {
  background-color: #CCCCCC;
}
#menu {
  color: #423f54;
  font-size: 14px;
  font-weight: bold;
  background-color: #c5cacf;
  padding: 0.5em;
  border: 1px solid #b7b7b7;
}

a {
  color: #566ca5;
  text-decoration: none;
  font-weight: bold;
}
a:hover {
  text-decoration: underline;
}

#container {
  width:600px;
  position:relative;
  left:50%;
  margin-left:-300px;
  margin-top: 100px;
}
input:focus, textarea:focus { border: 1px solid #FC0; }
input, textarea, select { border: 1px solid #AAA; }

#notice {
  width: 384px;
  border: 2px solid red;
  padding: 7px;
  margin-bottom: 10px;
  background-color: #ffffff;
}

#footer {
  text-align:center;
  font-size:11px;
  color: #999;
}

<% @internal = Customer.find(:first, :conditions => ["(name = 'Internal' or name = ?) AND company_id = ?", @company.name, @company.id]) %>
<% if !@internal.nil? && !@internal.css.nil? && @internal.css.length > 0 %>
<%= @internal.css %>
<% end %>
</style>


</head>

<div id="container">

  <div align="center">
  <% if flash[:notice] %><div id="notice" align="center"><%= flash[:notice] %><% flash.clear %></div><% end %>
  <table width="400px" style="border: 1px solid #666666;" cellpadding="0" cellspacing="0">
  <tr><td align="center" id="menu" style="padding-top:2em;padding-bottom:2em;">
  <% if @internal && @internal.logo? %>
  <%= tag("img", {:src => "/customers/show_logo/#{@internal.id}", :border => 0 } ) %>
  <% else %>
  <span style="font-size:120%;"><%= @company.name %></span>
  <% end %>
  <br/>
  </td></tr>
  <tr><td style="padding-top:2em; background-color: #ffffff;">&nbsp;</td></tr>
  <tr><td align="center" style="background-color: #ffffff;">
  <% form_tag( {:action => 'validate'}, {:id => "loginform"}) do %>
  <table border="0" cellpadding="2" cellspacing="0" style="width:200px;">
  <tr><td align="right" style="padding-right:0.5em;"><label for="username"><strong>Username</strong></label></td><td><input name="user[username]" id="username" type="text" class="inputbox" alt="username" size="10" /></td></tr>
  <tr><td align="right" style="padding-right:0.5em;"><label for="password"><strong>Password</strong></label></td><td><input type="password" id="password" name="user[password]" class="inputbox" size="10" alt="password" /></td></tr>
  <tr><td align="right" style="padding-right:0.5em;"><label for="remember"><strong><small>Remember me on this computer</small></strong></label></td><td><input type="checkbox" id="remember" name="remember" class="inputbox" value="1" /></td></tr>
  <tr><td>&nbsp;</td><td><input type="submit" name="Submit" class="button" value="Log in" /></td></tr>
  <tr><td style="padding-top:1.5em;">&nbsp;</td><td><small><a href="/login/forgotten_password">Forgot Login?</a></small></td></tr>
  </table>
  <% end %>
  </td></tr>
  </table>
  </div>
</div>
<div id="footer">
&copy; 2005-2006 <a href="http://www.clockingit.com">Clocking IT v0.99.3</a> - by Erlend &amp; Ellen Simonsen (support@clockingit.com)<br/>
</div>
<script type="text/javascript">
document.forms[0].username.focus();
</script>


<% else %>


