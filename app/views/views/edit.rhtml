<fieldset id="content">
<legend><%=_ 'Edit View' %></legend>

<%= start_form_tag :action => 'update', :id => @view %>
  <%= render :partial => "form" %>
  <%= submit_tag _("Edit"), :class => "nolabel" %>
<%= end_form_tag %>
</fieldset>
[<%= link_to _("Delete View"), {:controller => 'views', :action => 'destroy', :id => @view}, :confirm => _("Really delete %s?", @view.name) %>]
