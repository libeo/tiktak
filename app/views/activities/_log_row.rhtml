<% cache( :controller => "log", :action => "component_log_row", :action_suffix => "#{log.id}") do %>

<% date_format = session[:user].time_format %>

<tr class="hoverrow">
  <td align="right" valign="top" style="width:80px;" nowrap><%= "#{tz.utc_to_local(log.started_at).strftime(date_format)}"%><% if log.duration > 0 %> - <%= "#{tz.utc_to_local(log.started_at + log.duration.minutes).strftime(date_format)}"%><br/><% end %>
  <%= link_to "#{worked_nice(log.duration)}", { :controller => 'tasks', :action => 'edit_log', :id => log } if (log.duration > 0)%>
  </td>
  <td align="center" width="36px" valign="top">
  <% if log.task && log.task_id > 0 %>

  <%= image_tag('accept.png', :alt => "Complete") if log.log_type == WorkLog::TASK_COMPLETED %>
  <%= image_tag('cancel.png', :alt => "Reverted") if log.log_type == WorkLog::TASK_REVERTED %>
  <%= image_tag('add.png', :alt => "New Task") if log.task.type_id != 2 && log.task.type_id != 1 && log.log_type == WorkLog::TASK_CREATED %>
  <%= image_tag('bug_add.png', :alt => "New Defect") if log.task.type_id == 2 && log.log_type == WorkLog::TASK_CREATED %>
  <%= image_tag('application_add.png', :alt => "New Feature") if log.task.type_id == 1 && log.log_type ==  WorkLog::TASK_CREATED %>
  <%= image_tag('application_form_edit.png', :alt => "Edit") if log.log_type == WorkLog::TASK_MODIFIED %>
  <%= image_tag('comment_add.png', :alt => "New Comment") if log.log_type == WorkLog::TASK_COMMENT %>
  <%= image_tag('time_add.png', :alt => "Work done") if log.log_type == WorkLog::TASK_WORK_ADDED %>
  <%= image_tag('folder_add.png', :alt => "Archived") if log.log_type == WorkLog::TASK_ARCHIVED %>
  <%= image_tag('folder_go.png', :alt => "Archived") if log.log_type == WorkLog::TASK_RESTORED %>

  <% else %>

  <%= image_tag('page_add.png', :alt => "Page added") if log.log_type == WorkLog::PAGE_CREATED %>
  <%= image_tag('page_delete.png', :alt => "Page deleted") if log.log_type == WorkLog::PAGE_DELETED %>
  <%= image_tag('page_edit.png', :alt => "Page modified") if log.log_type == WorkLog::PAGE_MODIFIED %>
  <%= image_tag('delete.png', :alt => "Task Deleted") if log.log_type == WorkLog::TASK_DELETED %>

  <%= image_tag('package.png', :alt => "Commit") if log.log_type == WorkLog::SCM_COMMIT %>

  <% end %>
  </td>
  <td  valign="top" width="90%"><div style="float:left;"><strong>
<% if log.task && log.task_id > 0 %>
<%= link_to_task log.task %>
<% elsif log.scm_changeset && log.scm_changeset_id.to_i > 0 %>
<%= "<small>" + log.scm_changeset.issue_num + "</small> " + link_to(h(log.scm_changeset.name), {:controller => 'scm', :action => 'edit', :id => log.scm_changeset_id}) -%>
          <br /><%= "<span class=\"optional\">#{log.scm_changeset.full_name}</span> " %>

<% end %>
    <%= "<br/>" if (log.task && log.task_id > 0) %>
            <%= "<span class=\"optional\">#{log.task.full_name}</span> " if log.task && log.task_id > 0 %>
            <%= "<small><span class=\"otheruser\">[#{log.user.name}]</span></small>" if log.user %>
            <%= "<small><span class=\"otheruser\">[#{log.scm_changeset.author}]</span></small>" if log.scm_changeset && !log.user %>
  </strong></div>
  <div style="float:right;"><%= avatar_for log.user, 25 if log.user %></div>
  <div style="clear:both;padding-left:4px;padding-right:4px;padding-top:0.2em;padding-bottom:1em;border-top:1px solid #e8e8e8;">
<% if log.body && log.body.length > 0 %>
      <%= wrap_text(log.body, 100).gsub(/\n/, "<br>") if log.body %>
<% end %>
  </div>
  </td>
</tr>
<% end %>
