<table cellpadding="0" cellspacing="0" class="content" width="100%" style="padding-left: 1em; padding-right: 1em;">
  <tr>
    <td align="left" colspan="2" class="page_header"><div style="float:left;"><%=_ 'Projects'%></div><div style="float:right;padding-top:0.1em;"><%= link_to _('New'), :controller => "projects", :action => 'new' %></div></td>
  </tr>
  <%
     last_customer = 0
     for project in @projects
       if last_customer != project.customer_id && session[:user].option_externalclients.to_i > 0
         if last_customer != 0
  %>

   </td></tr></table></td></tr>
         <% end %>

               <%
                  collapse = " <div id=\"indicator_#{project.customer_id}\" class=\""
                  collapse << ((session[:collapse_projects] && session[:collapse_projects][project.customer_id.to_s].to_i == 1) ? "collapse-indicator-closed" : "collapse-indicator-open")
                  collapse << "\" </div> "
                  collapse << (project.customer.name == 'Internal' ? session[:user].company.name : project.customer.name)
                %>

               <tr><td colspan=2 align=left class="project_customer"><%= link_to_remote collapse,
                                              :url => { :action => 'toggle_display', :id => project.customer_id },
                                              :loading => "Element.show('loading');",
                                              :complete => "Element.hide('loading');"
               %></strong></td></tr>
               <tr><td colspan=2 align=left><table width="100%" cellpadding="0" cellspacing="0" id="projects_customer_<%= project.customer_id %>" <%= "style=\"display:none;\"" if (session[:collapse_projects] && session[:collapse_projects][project.customer_id.to_s].to_i == 1) %>><tr><td>
               <%
                  last_customer = project.customer_id
               end


               critical_count = Task.count(["project_id = ? AND (severity_id + priority)/2 > 0  AND completed_at IS NULL", project.id])
               normal_count = Task.count(["project_id = ? AND (severity_id + priority)/2 = 0 AND completed_at IS NULL", project.id])
               low_count = Task.count(["project_id = ? AND (severity_id + priority)/2 < 0 AND completed_at IS NULL", project.id])
               total_count = (critical_count + normal_count + low_count) * 1.0

               critical_percent = ((critical_count / total_count) * 100.0)
               normal_percent = ((normal_count / total_count) * 100.0)

               unless critical_percent.nan?
                 critical_percent = critical_percent.round
               end
               unless normal_percent.nan?
                 normal_percent = normal_percent.round
               end

               if normal_percent + critical_percent > 100
                  normal_percent = 100 - critical_percent
               end

               low_percent = 100.0 - critical_percent - normal_percent


               collapse = " <div id=\"small_indicator_#{project.id}\" class=\""
               collapse << ((session[:collapse_milestones] && session[:collapse_milestones][project.id.to_s].to_i == 1) ? "small-collapse-indicator-closed" : "small-collapse-indicator-open")
               collapse << "\" </div> "
          %>
    <tr class="milestone" id="project_<%=project.id%>" onMouseOver="this.addClassName('task-highlight'); this.down('span.popout').show();" onMouseOut="this.removeClassName('task-highlight'); this.down('span.popout').hide();"><td colspan="2">
        <div style="position: absolute; z-index:10; width: 16px;">
          <% if session[:user].can?(project, 'grant') || session[:user].can?(project, 'milestone') %>
          <span class="popout" id="edit_project_<%= project.id%>" style="display: none;">
            <%= link_to image_tag("application_form_edit.png", :border => 0, :title => _("Edit project <b>%s</b>", project.name), :class => "tooltip"),
            { :controller => 'projects', :action => 'edit', :id => project } -%>
          </span>
          <% end %>
        </div>
        <div style="float: left; margin-left:5px;"><span class="projects"><%= link_to_remote collapse,
                                              :url => { :action => 'toggle_display_milestones', :id => project.id },
                                              :loading => "Element.show('loading');",
                                              :complete => "Element.hide('loading');" %> <%= link_to project.name, { :controller => 'views', :action => 'select_project', :id => project.id} %></span></div>
              <div class="prog-border"  style="float: right; height: 15px;">
                  <div class="prog-bar-high tooltip" style="width: <%= number_to_percentage( critical_percent, :precision => 0)  %>;" title="<%= number_to_percentage( critical_percent, :precision => 0) + " (#{critical_count}/#{total_count.to_i})" %>  High Priority"> </div>
                  <div class="prog-bar-medium tooltip" style="width: <%= number_to_percentage( normal_percent, :precision => 0)  %>;" title="<%= number_to_percentage( normal_percent, :precision => 0) + " (#{normal_count}/#{total_count.to_i})"%>  Normal"> </div>
                  <div class="prog-bar-low tooltip" style="width: <%= number_to_percentage( low_percent, :precision => 0)  %>;" title="<%= number_to_percentage( low_percent, :precision => 0) + " (#{low_count}/#{total_count.to_i})" %>  Low Priority "> </div>
                </div>
              </div>
            </td></tr>
          <%
               total_count = Task.count(["project_id = ?", project.id]) * 1.0
             if total_count >= 1.0
               done_count = Task.count(["project_id = ? AND completed_at IS NOT NULL", project.id])
               done_percent = (done_count/total_count) * 100.0
          %>
          <tr class="milestone project_<%= project.id %>" style="height:16px;<%= "display:none;" if (session[:collapse_milestones] && session[:collapse_milestones][project.id.to_s].to_i == 1) %>"><td colspan="2"><div><div style="float: left;padding-top:2px;"><span class="milestones"><%=_ 'Overall Progress'%></span></div>
              <div class="prog-border"  style="float: right; height: 10px;margin-top:2px;">
                  <div class="prog-bar-medium tooltip " style="width: <%= number_to_percentage( done_percent, :precision => 0)  %>;" title="<%= number_to_percentage( done_percent, :precision => 0) %> (<%= "#{done_count.to_i} / #{total_count.to_i}"%>)  Complete"> </div>
                  <div class="prog-bar-low tooltip" style="width: <%= number_to_percentage( 100-done_percent, :precision => 0)  %>;" title="<%= number_to_percentage( 100-done_percent, :precision => 0) %> (<%= "#{total_count.to_i - done_count.to_i} / #{total_count.to_i}"%>) Remaining"> </div>
                </div>
              </div>
            </td></tr>
          <% end
             for milestone in project.milestones.find(:all, :conditions => ["completed_at IS NULL"], :order => "due_at, milestones.name", :include => [:user])
          %>
              <%= render :partial => "activities/milestone_row", :locals => { :milestone => milestone } %>
          <% end %>
  <% @completed_milestones = Milestone.count(["project_id = ? AND completed_at IS NOT NULL", project.id])
     if @completed_milestones > 0
  %>
  <tr><td colspan=2 align=right class="milestone_completed"><%= link_to _('%d completed milestone', @completed_milestones), :controller => 'milestones', :action => 'list_completed', :id => project %></td></tr>
  <% end %>

  <% end
     if last_customer != 0 %>
  </td></tr></table></td></tr>
  <% end %>

  <% if @completed_projects > 0 %>
  <tr><td colspan=2 align=right class="project_completed"><%= link_to _('%d completed project', @completed_projects), :controller => 'projects', :action => 'list_completed' %></td></tr>
  <% end %>
</table>

