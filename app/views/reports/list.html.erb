<% tr_class = nil %>
  <table cellspacing=0 cellpadding=0 class="content" width="99%" style="margin-left: 1em;padding-right:1em;" id="content">
  <tr><td align=left colspan=2 class="page_header"><%=_ 'Reports' %></td></tr>
  <tr>
    <td align=left colspan=2 style="padding-bottom:1em; padding-top:1em;">
      <table width="100%" border=0 cellspacing=0 cellpadding=0>
	<tr>
	  <td  id="reports_params">
      <%= render(:partial => "reports_params") %><br />
	  </td>
	</tr>
        <tr>
          <td valign="top">
            <table id="reports" cellspacing=0 cellpadding=3>

              <% if @column_headers && @column_headers.size > 1 %>
              <% if @generated_report && @generated_report.id > 0 %>
              <tr><td align="right" colspan=<%= @column_headers.keys.size + 1 %>><!--<%= link_to  "CSV" + image_tag('report_go.png', :border => 0, :class => 'tooltip', :title => _('Download CSV file of this report')), :action => "get_csv", :id => @generated_report.id %>--></td></tr>
                  <% end %>

              <tr>
                <th class="row_header"><%= @column_headers['__'] %></th>
                <% @column_headers.sort.each do |key,value| %>
                <% next if key == '__' %>
                <th class="column_header"><%= value %></th>
                <% end %>
                <th class="row_header" style="padding-left:1em;"><%=_ 'Total' %></th>
              </tr>

              <% if @rows
                   last_key = ''
                   subtotal = 0
               %>
              <% @rows.sort.each do |key, value| %>

              <% tr_class = cycle('even', 'odd') %>
              <% tr_class = 'warning' if @warnings.include?(key) %>

              <% if last_key != '' && last_key != value['__'] && subtotal > 0 && params[:report] && ["3","2","5"].include?(params[:report][:type]) %>

              <tr class="row_subtotal">
                <td class="row_subtotal_heading"><%=_ 'Total' %></td>
                <% @column_headers.sort.each do |k,v| %>
                <% next if k == '__' %>
                <td class="row_value">&nbsp;</td>
                <% end %>
                <td class="row_subtotal"><%= format_duration(subtotal) %></td>
              </tr>
              <% subtotal = 0 %>
              <% end %>


              <tr class="<%=tr_class%>">
                <td class="row_heading"><%= value['__'] if last_key != value['__'] %></td>
                <% last_key = value['__'] %>
                <% @column_headers.sort.each do |k,v| %>
                <% next if k == '__' %>
                <td class="row_value<%=" audit" if params[:report][:type] == "2"%><%=" task" if ["3","5"].include?(params[:report][:type])%>"><%=(value[k] && value[k].is_a?(Fixnum)) ?  format_duration(value[k]) : value[k] %></td>
                <% end %>
                <% subtotal += @row_totals[key] - @subtract_totals[key] if params[:report][:subtotals] == "1" %>
                <td class="row_total"><%= format_duration(@row_totals[key]) %></td>
                <% end %>
              </tr>
              <% end %>

              <% if subtotal > 0 && params[:report] && ["3","2","5"].include?(params[:report][:type]) %>
              <!--<tr class="<%=tr_class || cycle('odd', 'even')%>">-->
              <tr class="row_header">
                <td class="row_subtotal_heading"><%=_ 'Total' %></td>
                <% @column_headers.sort.each do |k,v| %>
                <% next if k == '__' %>
                <td class="row_value">&nbsp;</td>
                <% end %>
                <td class="row_subtotal"><%= format_duration(subtotal) %></td>
              </tr>
              <% subtotal = 0 %>
              <% end %>

              <tr>
                <th class="row_header">&nbsp;</th>
                <% @column_headers.sort.each do |key,value| %>
                <% next if key == '__' %>
                <th class="row_total"><%= format_duration(@column_totals[key]) if @column_totals[key] > 0 %></th>
                <% end %>
                <th class="row_total_total" style="padding-left:1em;"><%= format_duration(@total.to_i) %></th>
              </tr>
              <% end %>
            </table>
            &nbsp;
          </td>
	</tr>
</table>

</td></tr>
</table>
<script type="text/javascript" language="javascript" charset="utf-8">


jQuery('#report_range').change(function() {
if( jQuery('#report_range').val() == "7" ) {
	 //alert('showing date_range 1');
     jQuery('#date_range').show();
  } else {
     jQuery('#date_range').hide();
  }
  return false;
});

jQuery('#report_range').blur(function() {
  //alert(jQuery('#report_range').val());
  if( jQuery('#report_range').val() == "7" ) {
	 //alert('showing date_range 2');
     jQuery('#date_range').show();
  } else {
     jQuery('#date_range').hide();
  }
  return false;
  });

jQuery('#report_type').change(function() {
	var reportType = jQuery('#report_type').val();
	if( reportType == "1" || reportType == "4" ) {
		jQuery('#pivot_config').show();
	} else {
		jQuery('#pivot_config').hide();
	}
	
	if( reportType == "4" ) {
		 //alert('showing date-select');
		jQuery('#date-select').hide();
		jQuery('#date_range').hide();
	} else {
	  jQuery('#date-select').show();
	  if( jQuery('#report_range').val() == "7" ) {
		 jQuery('#date_range').show();
	  } else {
	  	 jQuery('#date_range').hide();
	  }
	}
	
	if( reportType == "3" || reportType == "2" || reportType == "5" ) {
		jQuery('#subtotals').show();
	} else {
		jQuery('#subtotals').hide();
        }

        if (reportType == "3" || reportType == "5" ) {
          jQuery("#approved").show();
        }
        else {
          jQuery("#approved").hide();
        }
	return false;
});

jQuery('#report_range').blur(function() {
	var reportType = jQuery('#report_type').val();
	if( reportType == "1" ) {
		jQuery('#pivot_config').show();
	} else {
		jQuery('#pivot_config').hide();
	}
	
	if( reportType == "3" || reportType == "2" || reportType == "5" ) {
		jQuery('#subtotals').show();
	} else {
		jQuery('#subtotals').hide();
	}
	return false;
});

</script>

